<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
<t:content>

	<input t:type="TextField" t:id="theText" t:mixins="zoneUpdater" t:clientEvent="keyup" t:event="theTextChanged" t:zone="prop:componentResources.id"/>

	<span t:type="zone" t:id="countZone" id="prop:componentResources.id">
		${count} characters.
	</span>

</t:content>
</html>
